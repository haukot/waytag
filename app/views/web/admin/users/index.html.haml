%h3
  = t('user.list')

.clearfix
  .pull-left
    = ransack_paginate @users
  .pull-right
    = link_to new_admin_user_path, :class => "btn btn-primary" do
      %i.icon-plus
      = t('Add user')

%table.table
  %thead
    %th login
    %th actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.login
        %td
          .btn-group
            = link_to t('edit'), edit_admin_user_path(user.id), class: "btn btn-primary"
            = link_to t('destroy'), admin_user_path(user.id), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-danger"

= ransack_paginate @users