%h1
  Bonuses
  = link_to '+ New Bonus', new_admin_bonus_path, class: "btn btn-default"

%hr

= paginate @bonuses

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th #
        %th= sort_link @search, :title, "Title"
        %th= sort_link @search, :description, "Description"
        %th

    %tbody
      - @bonuses.each do |bonus|
        %tr
          %td= bonus.id
          %td= bonus.title
          %td= bonus.description
          %td= edit_and_destroy_buttons_vertical(edit_admin_bonus_path(bonus), admin_bonus_path(bonus))

= paginate @bonuses
