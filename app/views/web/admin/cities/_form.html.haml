= simple_form_for @city, :url => url, :html => {:class => "form-horizontal"} do |f|
  = f.error_notification
  = f.input :name
  = f.input :twitter
  = f.input :email
  = f.input :sub_domain
  = f.input :hashtag
  = f.input :widget
  .control-group
    .controls
      = f.button :submit, :class => 'btn btn-primary'
