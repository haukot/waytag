%h1
  Listing cities
  = link_to '+ New City', new_admin_city_path, class: "btn btn-default"

%hr

= paginate @cities

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th #
        %th= sort_link @search, :slug
        %th= sort_link @search, :name
        %th= sort_link @search, :email
        %th= sort_link @search, :twitter_name
        %th= sort_link @search, :hashtag
        %th

    %tbody
      - @cities.each do |city|
        %tr
          %td= city.id
          %td= city.slug
          %td= city.name
          %td= city.email
          %td= city.twitter_name
          %td= city.hashtag
          %td.text-right= edit_and_destroy_buttons(edit_admin_city_path(city), admin_city_path(city))
