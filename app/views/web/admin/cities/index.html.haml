%h1
  Listing cities
  = link_to '+ New City', new_admin_city_path, class: "btn btn-default"

%hr

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th #
        %th Slug
        %th Name
        %th Email
        %th Twitter name
        %th Hashtag
        %th

    %tbody
      - @cities.each do |city|
        %tr
          %td= city.id
          %td= city.slug
          %td= city.name
          %td= city.email
          %td= city.twitter_name
          %td= city.hashtag
          %td.text-right= edit_and_destroy_buttons(edit_admin_city_path(city), admin_city_path(city))
