!!! 5
%html(lang="en")
  %head
    = render 'layouts/web/admin/shared/head'
    = include_gon

  %body
    .main
      = nav_bar fixed: :top, brand: "Waytag::Admin", brand_link: admin_root_path do
        = menu_group do
          = menu_item t('reports'), admin_reports_path
          = menu_item t('cities'), admin_cities_path
          = menu_item t('streets'), admin_streets_path
          = menu_item t('partners'), admin_partners_path
          = menu_item t('bonuses'), admin_bonuses_path
          = menu_item t('blog'), admin_posts_path
          = drop_down t('users')do
            = menu_item t('twitter'), admin_twitter_users_path
            = menu_item t('web'), admin_web_users_path
            = menu_item t('API'), admin_api_users_path
          = menu_item t('classifier'), admin_classifier_features_path
        = menu_group :pull => :right do
          - if current_user
            %li
              = image_tag current_user.profile_image_url, class: "nav-avatar"
            = drop_down "#{t('you_are')} #{current_user.screen_name}" do
              = menu_item t('log_out'), admin_session_path, method: :delete


      %br
      %br
      %br
      .container.base-content
        .row
          .col-lg-12
            = bootstrap_flash
            = yield
    %footer
      %p &copy; Waytag.ru 2013
